---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark:bg-black dark:text-white min-h-screen" x-data>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Tool for getting file hashes and size for no-intro." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="mx-auto container px-4 md:px-8 py-8 min-h-screen flex flex-col gap-y-12">
		<slot />
	</body>
</html>